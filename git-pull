cd `dirname $0`

echo " checking out git is set up correctly"
git pull --all
git checkout main

echo " box worktree to track box branch "
rm -rf box
git worktree add -f box origin/box
if [ -d box ]; then
  cd box
  git branch -D box
  git switch -c box
  cd ..
fi
git switch main

echo " unpacking box img "
cd build/debian11-arm64
ln -s ../../box/debian11-arm64 box
box/ungzip
cd ../..
